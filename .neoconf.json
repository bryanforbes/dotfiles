{
  "neodev": {
    "library": {
      "enabled": true,
      "plugins": true
    }
  },
  "neoconf": {
    "plugins": {
      "lua_ls": {
        "enabled": true
      }
    }
  },
  "lspconfig": {
    "lua_ls": {
      "Lua.workspace.library": [
        "config/nvim/lua/types",
        ".lua_types"
      ],
      "Lua.workspace.checkThirdParty": false,
      "Lua.completion.callSnippet": "Replace",
      "Lua.format.enable": false /* disable formatting in favor of stylua */
    }
  }
}
