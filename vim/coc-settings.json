{
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.hoverTarget": "float",

  "codeLens.enable": true,
  "diagnostic.errorSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.maxWindowHeight": 20,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.virtualText": false,

  "explorer.floating.width": 60,
  "explorer.floating.position": "center",
  "explorer.git.icon.status.added": "✚",
  "explorer.git.icon.status.deleted": "✖",
  "explorer.git.icon.status.renamed": "➜",
  "explorer.git.icon.status.unmerged": "═",
  "explorer.git.icon.status.untracked": "?",
  "explorer.git.icon.status.modified": "✹",
  "explorer.git.icon.status.ignored": "☒",
  "explorer.icon.enableNerdfont": true,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"]
  },
  "explorer.openAction.strategy": "sourceWindow",
  "explorer.position": "floating",
  "explorer.previewAction.onHover": false,
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],

  "suggest.enablePreview": true,
  "suggest.maxPreviewWidth": 100,
  "tsserver.npm": "/usr/local/bin/npm",

  "eslint.enable": false,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "python.formatting.provider": "black",
  "python.jediEnabled": false,
  "python.linting.pylintEnabled": false,

  "javascript.referencesCodeLens.enable": false,
  "javascript.suggestionActions.enabled": false,

  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.referencesCodeLens.enable": false,

  "diagnostic-languageserver.trace.server": "verbose",

  "diagnostic-languageserver.filetypes": {
    "python": ["flake8", "mypy"],
    "pythonstub": ["flake8", "mypy"]
  },

  "diagnostic-languageserver.formatFiletypes": {
    "python": ["isort", "black"],
    "pythonstub": ["isort", "blackpyi"]
  },

  "diagnostic-languageserver.mergeConfig": true,

  "diagnostic-languageserver.linters": {
    "flake8": {
      "rootPatterns": [".flake8", "setup.cfg", "tox.ini"],
      "requiredFiles": [".flake8", "setup.cfg", "tox.ini"],
      "args": [
        "--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s",
        "--stdin-display-name",
        "%filepath",
        "-"
      ],
      "securities": {
        "W": "warning",
        "E": "error",
        "F": "error",
        "C": "error",
        "N": "error",
        "B": "error",
        "Y": "error"
      }
    },
    "mypy": {
      "sourceName": "mypy",
      "command": "mypy",
      "debounce": 100,
      "rootPatterns": ["mypy.ini", ".mypy.ini", "setup.cfg"],
      "requiredFiles": ["mypy.ini", ".mypy.ini", "setup.cfg"],
      "args": [
        "--no-color-output",
        "--no-error-summary",
        "--show-column-numbers",
        "--show-error-codes",
        "--shadow-file", "%filepath", "%tempfile", "%filepath"
      ],
      "formatPattern": [
        "^([^:]+):(\\d+):(\\d+):\\s+([a-z]+):\\s+(.*)$",
        {
          "sourceName": 1,
          "sourceNameFilter": true,
          "line": 2,
          "column": 3,
          "security": 4,
          "message": 5
        }
      ],
      "securities": {
        "error": "error",
        "note": "info"
      }
    },
    "dmypy": {
      "sourceName": "dmypy",
      "command": "dmypy",
      "rootPatterns": ["mypy.ini", ".mypy.ini", "setup.cfg"],
      "requiredFiles": ["mypy.ini", ".mypy.ini", "setup.cfg"],
      "args": ["run", "--", "--show-column-numbers", "--show-error-codes", "--shadow-file", "%filepath", "%tempfile", "%filepath"],
      "formatPattern": [
        "^([^:]+):(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
        {
          "sourceName": 1,
          "sourceNameFilter": true,
          "line": 2,
          "column": 3,
          "security": 4,
          "message": 5
        }
      ]
    }
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "requiredFiles": ["pyproject.toml"],
      "rootPatterns": ["pyproject.toml"]
    },
    "blackpyi": {
      "command": "black",
      "args": ["--quiet", "--pyi", "-"],
      "requiredFiles": ["pyproject.toml"],
      "rootPatterns": ["pyproject.toml"]
    },
    "isort": {
      "requiredFiles": ["pyproject.toml"],
      "rootPatterns": ["pyproject.toml"]
    }
  }
}
